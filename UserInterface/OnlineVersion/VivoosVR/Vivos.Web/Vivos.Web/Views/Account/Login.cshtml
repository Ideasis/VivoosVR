@using VivoosVR.Web.Models

@{
    Layout = null;
    ViewBag.Title = "Giriş Sayfası";
}

@model LoginViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VivoosVR</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=latin-ext" rel="stylesheet">

    <meta name="description" content="VivoosVR Login Page" />
</head>
<body  class="p-0 o-hidden">
    <div class="login-content fullscreen-login" ng-app="app" ng-controller="controllerLogin">
        <!-- Login -->
        <div class="lc-block toggled " id="l-login">
            @*<div class="lcb-form">*@
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", @class = "lcb-form op-70", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="input-group m-b-20">
                    <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                    <div class="fg-line">
                        @Html.TextBoxFor(m => m.TCKN, new { @class = "form-control" })
                    </div>
                </div>
                <div class="input-group m-b-20">
                    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                    <div class="fg-line">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="checkbox">
                    <label>
                        @*@Html.CheckBoxFor(m => m.RememberMe)*@
                        @*<input type="checkbox" id="RememberMe" name="RememberMe" />*@
                        <input name="RememberMe" id="RememberMe" type="checkbox" value="true" data-val="true">
                        <i class="input-helper"></i>
                            Remember Me
                    </label>
                </div>
                <a ng-click="submit();" class="btn btn-login btn-default btn-float ">
                    <i class="zmdi zmdi-arrow-forward"></i>
                </a>

            }
            @*</div>*@
        </div>
    </div>
